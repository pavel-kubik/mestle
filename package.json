{
  "name": "mestle",
  "version": "0.1.2",
  "homepage": "https://mestle.cz",
  "private": true,
  "type": "module",
  "dependencies": {
    "@netlify/functions": "^1.0.0",
    "@tippyjs/react": "^4.2.6",
    "@types/node": "^20.19.0",
    "bcryptjs": "^2.4.3",
    "bcryptjs-react": "^2.4.6",
    "geolib": "^3.3.3",
    "jwt-auth-mongodb": "^1.0.7",
    "luxon": "^3.5.0",
    "mongodb": "^5.5.0",
    "prop-types": "^15.8.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-hotjar": "^5.4.1",
    "react-router-dom": "^6.3.0",
    "react-spinners": "^0.13.8",
    "react-spring": "^9.4.5",
    "react-viewport-height": "^1.2.0",
    "typescript": "^5.9.2",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "lint": "eslint --fix src --ext .js,.jsx,.ts,.tsx",
    "format": "prettier src/**/*.js* --write --config ./.prettierrc",
    "start": "vite",
    "prebuild": "vitest run",
    "build": "vite build",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "dev": "vite"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format"
    }
  },
  "lint-staged": {
    "*.+(js|jsx)": [
      "eslint --fix",
      "git add"
    ],
    "*.+(json|css|md)": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@svgr/core": "^8.1.0",
    "@svgr/plugin-jsx": "^8.1.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "gh-pages": "^4.0.0",
    "husky": "^8.0.1",
    "jest-watch-typeahead": "^0.6.5",
    "jsdom": "^25.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^3.3.3",
    "unplugin-macros": "^0.13.1",
    "vite": "^6.0.0",
    "vitest": "^3.0.0"
  }
}
