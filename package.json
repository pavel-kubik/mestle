{
  "name": "mestle",
  "version": "0.1.2",
  "homepage": "https://mestle.cz",
  "private": true,
  "type": "module",
  "dependencies": {
    "@netlify/functions": "^4.3.0",
    "@netlify/vite-plugin": "^2.7.0",
    "@tippyjs/react": "^4.2.6",
    "@types/node": "^24.7.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "bcryptjs": "^3.0.2",
    "bcryptjs-react": "^2.4.6",
    "geolib": "^3.3.4",
    "jwt-auth-mongodb": "^1.0.9",
    "luxon": "^3.7.2",
    "mongodb": "^6.20.0",
    "prop-types": "^15.8.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hotjar": "^6.3.1",
    "react-router-dom": "^7.9.4",
    "react-spinners": "^0.17.0",
    "react-spring": "^10.0.3",
    "typescript": "^5.9.3",
    "web-vitals": "^5.1.0"
  },
  "scripts": {
    "lint": "eslint --fix src --ext .js,.jsx,.ts,.tsx",
    "format": "prettier src/**/*.js* --write --config ./.prettierrc",
    "start": "vite",
    "prebuild": "vitest run",
    "build": "vite build",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "dev": "vite"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format"
    }
  },
  "lint-staged": {
    "*.+(js|jsx)": [
      "eslint --fix",
      "git add"
    ],
    "*.+(json|css|md)": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@netlify/dev-utils": "^4.3.0",
    "@svgr/core": "^8.1.0",
    "@svgr/plugin-jsx": "^8.1.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cross-env": "^10.1.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "jest-watch-typeahead": "^3.0.1",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "unplugin-macros": "^0.18.2",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
  }
}
